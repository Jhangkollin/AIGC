doctype html
html(lang='en')
	head
		include ./components/_meta.pug
		title Setup website
		link(rel='stylesheet', href='../css/onboarding.css')

	body
		include ./onboarding/_navigation.pug

		//- 內容開始 –––––––––––––––––––––––––––––––––––––––––––––––––––
		
		.container
			.content
				include ./components/__stepper.pug
				+stepIndicator(3, 1)

				.canvas
					h3 Setup website
					form(id='setupForm')
						.form-group
							label(for='website') Install website url
							input(type='text' placeholder='www.your-website.com')
						.form-group
							label(for='aigc-url') AIGC page url
							input(type='text' placeholder='your AI page' attr='answer-page-url' data-url-check)
							h5.suffix .mlyticsaigc.com
						.error-message Only alphanumeric characters and - _ . ~ are allowed.
						.form-group
							label(for='response-lang') Response language
							include ./components/__selectDropdown.pug
							+customSelect('lang-select', [
								{value: 'en', label: 'English'},
								{value: 'zh', label: '中文'}
								], 'en')
				.button-group
					//- button.fill(type='submit') Next
					a.button.fill.full(href='./install-widget.html') Next


		//- 內容結束 –––––––––––––––––––––––––––––––––––––––––––––––––––

		include ./onboarding/_footer.pug
		script(src='../js/onboarding.js')

